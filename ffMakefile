


CROP := 1920:988:0:92
INPUT ?=
FROM ?= 00:00:00
TO ?= 00:00:00

ffplay:
	$@ "$(INPUT)" -vf "crop=$(CROP)"

crop:
	@stem=$$(basename "$(INPUT)"); \
	stem=$${stem%.*}; \
	ffmpeg -i "$(INPUT)" -vf "crop=$(CROP)" -c:a copy "$${stem}-crop.mp4"

cut:
	ffmpeg -i "$(INPUT)" -ss $(FROM) -to $(TO) -async 1 -c copy part.mp4

conv:
	@stem=$$(basename "$(INPUT)"); \
	stem=$${stem%.*}; \
	ffmpeg -i "$(INPUT)" "$${stem}.mp4"
